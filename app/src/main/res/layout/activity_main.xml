<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carlos Gonzalez - CGI: Crazz Gamers Info"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/imgKratosMain"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/kratos1"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imgMasterchiefMain"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/masterchief1"
        app:layout_constraintTop_toBottomOf="@id/imgKratosMain"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imgWukongMain"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/wukong1"
        app:layout_constraintTop_toBottomOf="@id/imgMasterchiefMain"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
